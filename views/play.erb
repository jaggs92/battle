<h1>Player 1: <%= @game.name1.return_name %> vs Player 2: <%= @game.name2.return_name %></h1>

<div>
<h2><%= @game.name1.return_name %> <%= @game.name1.hit_points %>HP
<%= @game.name2.return_name %> <%= @game.name2.hit_points %>HP </h2>
</div>

<div>
<h2><%= @game.current_player.return_name %>'s turn</h2>
</div>

<div>
<% if @game.name1.hit_points <= 0 %>
<h2> <%= @game.name1.return_name %> loses </h2>
</div>

<% else %>
<form action="/attack">
  <input type="submit" value="attack">
</form>
<% end %>
